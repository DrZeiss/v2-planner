{% extends 'base.html.twig' %}

{% block headerTitle %}Kitter Jobs{% endblock %}

{% block breadcrumbs %}
    <li class="active"><span>Kitter Jobs</span></li>
{% endblock %}

{% block body %}
    <h2>Kitter Job list</h2>
    <table class="table table-bordered table-striped table-hover table-freeze-multi" data-scroll-height="500" data-cols-number="2">
        <thead>
        <tr>
            <th style="width:100px;border:solid;background-color:white">Name</th>
            <th style="width:100px;border:solid;background-color:white">SO #</th>
            <th style="width:100px;border:solid">Type</th>
            <th style="width:100px;border:solid">Qty</th>
            <th style="width:100px;border:solid">MO #</th>
            <th style="width:100px;border:solid">Build Location</th>
            <th style="width:100px;border:solid">Planner ESD</th>
            <th style="width:100px;border:solid; min-width:120px">BOM Issued By (Date)</th>
            <th style="width:100px;border:solid">Completion Date</th>
            <th style="width:100px;border:solid">Updated By</th>
            <th style="width:100px;border:solid">Filled Completely?</th>
            <th style="width:100px;border:solid">Short #1</th>
            <th style="width:100px;border:solid">Short #2</th>
            <th style="width:100px;border:solid">Short #3</th>
            <th style="width:100px;border:solid">Short #4</th>
            <th style="width:100px;border:solid">Location</th>
        </tr>
        </thead>
        <tbody>
            {% for job in jobs %}
            <tr>
                <td style="width:100px;background-color:white">{{ job.name }}</td>
                <td style="width:100px;background-color:white">{{ job.salesOrder }}</td>   
                <td style="width:100px">{{ job.type }}</td>
                <td style="width:100px">{{ job.quantity }}</td>
                <td style="width:100px">{{ job.manufacturingOrder }}</td>
                <td style="width:100px">{{ job.buildLocation.name }}</td>
                <td style="width:100px">
                    {% if job.plannerEstimatedShipDate %}
                        {{ job.plannerEstimatedShipDate|date('Y-m-d') }}
                    {% else %}
                        TBD
                    {% endif %}
                </td>
                <td style="width:100px">{{ job.bom.issuedBy }} ({{ job.bom.issuedDate|date('Y-m-d') }})</td>
                <td style="width:100px"><a href="#" class="completionDate" data-name="completionDate" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_completion_date', {'jobId': job.id}) }}">{{job.kitting.completionDate|date('Y-m-d')}}</a></td>
                <td style="width:100px">{{job.kitting.updatedBy}}</td>
                <td style="width:100px"><a href="#" class="filledCompletely" data-name="filledCompletely" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_filled_completely', {'jobId': job.id}) }}">{{job.kitting.filledCompletely}}</a></td>
                <td style="width:100px"><a href="#" class="short1" data-name="short1" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short1', {'jobId': job.id, 'shortId': (job.kitting.kittingShort1)?job.kitting.kittingShort1.id:0}) }}">{{ job.kitting.kittingShort1 ? job.kitting.kittingShort1.partNumber : null }}</a></td>
                <td style="width:100px"><a href="#" class="short2" data-name="short2" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short2', {'jobId': job.id, 'shortId': (job.kitting.kittingShort2)?job.kitting.kittingShort2.id:0}) }}">{{ job.kitting.kittingShort2 ? job.kitting.kittingShort2.partNumber : null }}</a></td>
                <td style="width:100px"><a href="#" class="short3" data-name="short3" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short3', {'jobId': job.id, 'shortId': (job.kitting.kittingShort3)?job.kitting.kittingShort3.id:0}) }}">{{ job.kitting.kittingShort3 ? job.kitting.kittingShort3.partNumber : null }}</a></td>
                <td style="width:100px"><a href="#" class="short4" data-name="short4" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short4', {'jobId': job.id, 'shortId': (job.kitting.kittingShort4)?job.kitting.kittingShort4.id:0}) }}">{{ job.kitting.kittingShort4 ? job.kitting.kittingShort4.partNumber : null }}</a></td>
                <td style="width:100px"><a href="#" class="location" data-name="location" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_location', {'jobId': job.id}) }}">{{job.kitting.location}}</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>

    $(document).ready(function() {
        //toggle `popup` / `inline` mode
        $.fn.editable.defaults.mode = 'popup';

        $('.filledCompletely').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                container: 'body',
                emptytext: 'N/A',
                source: [
                  {value: 1, text: 'Yes'},
                  {value: 0, text: 'No'}
                ],
                url: obj.dataset.url,
                title: 'Select Completion Status',
                success: function(response, newValue) {
                    if (response.status == 'error') {
                        return response.msg; //msg will be shown in editable form
                    }
                }
            });
        });

        $('.completionDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Completion Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });
        
        $('.short1').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Part Number for Short #1',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.short2').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Part Number for Short #2',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.short3').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Part Number for Short #3',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.short4').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Part Number for Short #4',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.location').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter location',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });
        
    });
    </script>
{% endblock %}