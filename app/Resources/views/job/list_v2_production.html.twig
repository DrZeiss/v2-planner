{% extends 'base.html.twig' %}

{% block headerTitle %}V2 Production Jobs{% endblock %}

{% block breadcrumbs %}
    <li class="active"><span>V2 Production Jobs</span></li>
{% endblock %}

{% block body %}
    <h2>V2 Production Job list</h2>
    <div id="table-listing">
        <div class="table-responsive table-scrollable">
            <table class="table table-bordered table-striped table-hover" data-count-fixed-columns="2">
                <thead>
                <tr>
                    <th style="border:solid;border-right:none;border-bottom:none">Name</th>
                    <th style="border:solid;border-bottom:none">SO #</th>
                    <th style="border:solid" rowspan=2>Type</th>
                    <th style="border:solid" rowspan=2>Model</th>
                    <th style="border:solid" rowspan=2>Qty</th>
                    <th style="border:solid" rowspan=2>MO #</th>
                    <th style="border:solid" rowspan=2>Build Location</th>
                    <th style="border:solid" rowspan=2>Planner ESD (Week #)</th>
                    <th style="border:solid;text-align:center" colspan=4>Shipped</th>
                    <th style="border:solid;text-align:center" colspan=2>BOM</th>
                    <th style="border:solid;text-align:center" colspan=3>Kitting</th>
                    <th style="border:solid;text-align:center" colspan=4>Short #1</th>
                    <th style="border:solid;text-align:center" colspan=4>Short #2</th>
                    <th style="border:solid;text-align:center" colspan=4>Short #3</th>
                    <th style="border:solid;text-align:center" colspan=4>Short #4</th>
                    <th style="border:solid" rowspan=2>Location</th>
                    <th style="border:solid" rowspan=2>Epoxy</th>
                    <th style="border:solid" rowspan=2>Tube</th>
                    <th style="border:solid" rowspan=2>Priority</th>
                    <th style="border:solid" rowspan=2>Sub Ready</th>
                    <th style="border:solid" rowspan=2>Build Completion Date</th>
                    <th style="border:solid" rowspan=2>Last Updated by</th>
                </tr>
                <tr>
                    <th style="border:solid;border-right:none;border-top:none"></th>
                    <th style="border:solid;border-top:none"></th>
                    {# Shipped #}
                    <th style="border:solid">Serials Generated Date</th>
                    <th style="border:solid">Date</th>
                    <th style="border:solid">Complete or Partial</th>
                    <th style="border:solid">2nd Shipped Date</th>
                    {# BOM #}
                    <th style="border:solid">Issued Date</th>
                    <th style="border:solid">Issued By</th>
                    {# Kitting #}
                    <th style="border:solid">Completion Date</th>
                    <th style="border:solid">Completed By</th>
                    <th style="border:solid">Filled Completely?</th>
                    {# Short #1 #}
                    <th style="border:solid">Part Number</th>
                    <th style="border:solid">Painted Part</th>
                    <th style="border:solid">EDD</th>
                    <th style="border:solid">Received Date</th>
                    {# Short #2 #}
                    <th style="border:solid">Part Number</th>
                    <th style="border:solid">Painted Part</th>
                    <th style="border:solid">EDD</th>
                    <th style="border:solid">Received Date</th>
                    {# Short #3 #}
                    <th style="border:solid">Part Number</th>
                    <th style="border:solid">Painted Part</th>
                    <th style="border:solid">EDD</th>
                    <th style="border:solid">Received Date</th>
                    {# Short #4 #}
                    <th style="border:solid">Part Number</th>
                    <th style="border:solid">Painted Part</th>
                    <th style="border:solid">EDD</th>
                    <th style="border:solid">Received Date</th>
                </tr>            
                </thead>
                <tbody>
                    {% for job in jobs %}
                    <tr>
                        <td>{{ job.name }}</td>
                        <td>{{ job.salesOrder }}</td>   
                        <td>{{ job.type }}</td>
                        <td>{{ job.model }}</td>
                        <td>{{ job.quantity }}</td>
                        <td>{{ job.manufacturingOrder }}</td>
                        <td>{{ job.buildLocation.name }}</td>
                        <td>
                            {% if job.plannerEstimatedShipDate %}
                                {{ job.plannerEstimatedShipDate|date('Y-m-d') }} ({{ job.plannerEstimatedShipDate|date('W') }})
                            {% else %}
                                TBD
                            {% endif %}
                        </td>
                        {# Shipped #}
                        <td><a href="#" class="serialsGeneratedDate" data-name="serialsGeneratedDate" data-pk="{{job.id}}" data-url="{{ path('edit_bom_serials_generated_date', {'jobId': job.id}) }}">{{ job.bom and job.bom.serialsGeneratedDate ? job.bom.serialsGeneratedDate|date('Y-m-d') : "Not Generated Yet" }}</a></td>
                        <td><a href="#" class="shipDate" data-name="shipDate" data-pk="{{job.id}}" data-url="{{ path('edit_shipping_ship_date', {'jobId': job.id}) }}">{{ job.shipping and job.shipping.shipDate ? job.shipping.shipDate | date('Y-m-d') : "" }}</a></td>
                        <td><a href="#" class="isComplete" data-name="isComplete" data-pk="{{job.id}}" data-value="{{job.shipping ? job.shipping.isComplete : ''}}" data-url="{{ path('edit_shipping_is_complete', {'jobId': job.id}) }}">{% if job.shipping and job.shipping.isComplete == 2 %}Complete{% elseif job.shipping and job.shipping.isComplete == 1 %}Partial{% else %}N/A{% endif %}</a></td>
                        <td><a href="#" class="secondShipDate" data-name="secondShipDate" data-pk="{{job.id}}" data-url="{{ path('edit_shipping_second_ship_date', {'jobId': job.id}) }}">{{ job.shipping and job.shipping.secondShipDate ? job.shipping.secondShipDate | date('Y-m-d') : "" }}</a></td>
                        {# BOM #}
                        <td><a href="#" class="issuedDate" data-name="issuedDate" data-pk="{{job.id}}" data-url="{{ path('edit_bom_issued_date', {'jobId': job.id}) }}">{{ job.bom and job.bom.issuedDate ? job.bom.issuedDate|date('Y-m-d') : "" }}</a></td>
                        <td>{{ job.bom ? job.bom.issuedBy : ""}}</td>
                        {# Kitting #}
                        <td>{{ job.kitting.completionDate|date('Y-m-d') }}</td>
                        <td>{{ job.kitting.updatedBy }}</td>
                        <td>{{ job.kitting.filledCompletely ? "Yes" : "No" }}</td>
                        {# Short #1 #}
                        <td>{{ job.kitting.kittingShort1.partNumber | default("") }}</td>
                        <td>{{ job.kitting.kittingShort1.paintedPart | default("") }}</td>
                        <td>{{ job.kitting.kittingShort1 ? job.kitting.kittingShort1.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                        <td>{{ job.kitting.kittingShort1 and job.kitting.kittingShort1.receivedDate ? job.kitting.kittingShort1.receivedDate | date('Y-m-d') : "" }}</td>
                        {# Short #2 #}
                        <td>{{ job.kitting.kittingShort2.partNumber | default("") }}</td>
                        <td>{{ job.kitting.kittingShort2.paintedPart | default("") }}</td>
                        <td>{{ job.kitting.kittingShort2 ? job.kitting.kittingShort2.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                        <td>{{ job.kitting.kittingShort2 and job.kitting.kittingShort2.receivedDate ? job.kitting.kittingShort2.receivedDate | date('Y-m-d') : "" }}</td>
                        {# Short #3 #}
                        <td>{{ job.kitting.kittingShort3.partNumber | default("") }}</td>
                        <td>{{ job.kitting.kittingShort3.paintedPart | default("") }}</td>
                        <td>{{ job.kitting.kittingShort3 ? job.kitting.kittingShort3.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                        <td>{{ job.kitting.kittingShort3 and job.kitting.kittingShort3.receivedDate ? job.kitting.kittingShort3.receivedDate | date('Y-m-d') : "" }}</td>
                        {# Short #4 #}
                        <td>{{ job.kitting.kittingShort4.partNumber | default("") }}</td>
                        <td>{{ job.kitting.kittingShort4.paintedPart | default("") }}</td>
                        <td>{{ job.kitting.kittingShort4 ? job.kitting.kittingShort4.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                        <td>{{ job.kitting.kittingShort4 and job.kitting.kittingShort4.receivedDate ? job.kitting.kittingShort4.receivedDate | date('Y-m-d') : "" }}</td>
                        <td>{{job.kitting.location}}</td>
                        <td><a href="#" class="epoxy" data-name="epoxy" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.epoxy}}" data-url="{{ path('edit_kitting_epoxy', {'jobId': job.id}) }}">{% if job.kitting.epoxy is same as(0) %}No{% elseif job.kitting.epoxy == 1 %}Yes{% elseif job.kitting.epoxy == 2 %}Done{% endif %}</a></td>
                        <td><a href="#" class="tube" data-name="tube" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.tube}}" data-url="{{ path('edit_kitting_tube', {'jobId': job.id}) }}">{% if job.kitting.tube is same as(0) %}No{% elseif job.kitting.tube == 1 %}Yes{% elseif job.kitting.tube == 2 %}Done{% endif %}</a></td>
                        <td>{{job.scheduling.priority}}</td>
                        <td><a href="#" class="subReady" data-name="subReady" data-pk="{{job.id}}" data-value="{{job.scheduling.subReady}}" data-url="{{ path('edit_scheduling_sub_ready', {'jobId': job.id}) }}">{{ job.scheduling.subReady ? "Yes" : "No"}}</a></td>
                        <td><a href="#" class="completionDate" data-name="completionDate" data-pk="{{job.id}}" data-url="{{ path('edit_scheduling_completion_date', {'jobId': job.id}) }}">{{ job.scheduling.completionDate ? job.scheduling.completionDate | date('Y-m-d') : "" }}</a></td>
                        <td>{{ job.updatedBy }}<br>({{ job.updateTime|date('Y-m-d') }})</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>

    $(document).ready(function() {
        app_handle_listing_horisontal_scroll($('#table-listing'));

        //toggle `popup` / `inline` mode
        $.fn.editable.defaults.mode = 'popup';

        $('.serialsGeneratedDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Serials Generated Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.shipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.isComplete').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                emptytext: 'N/A',
                placement: 'left',
                value: obj.dataset.value,
                source: [
                  {value: 2, text: 'Complete'},
                  {value: 1, text: 'Partial'}
                ],
                url: obj.dataset.url,
                title: 'Is Complete?',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.secondShipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Second Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.issuedDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Issued Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.epoxy').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                emptytext: 'N/A',
                value: obj.dataset.value,
                source: [
                  {value: 2, text: 'Done'},
                  {value: 1, text: 'Yes'},
                  {value: 0, text: 'No'}
                ],
                url: obj.dataset.url,
                title: 'Epoxy',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.tube').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                emptytext: 'N/A',
                value: obj.dataset.value,
                source: [
                  {value: 2, text: 'Done'},
                  {value: 1, text: 'Yes'},
                  {value: 0, text: 'No'}
                ],
                url: obj.dataset.url,
                title: 'Tube',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });
        
        $('.subReady').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                emptytext: 'N/A',
                placement: 'left',
                value: obj.dataset.value,
                source: [
                  {value: 1, text: 'Yes'},
                  {value: 0, text: 'No'},
                ],
                url: obj.dataset.url,
                title: 'Sub Ready?',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.completionDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Completion Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

    });
    </script>
{% endblock %}