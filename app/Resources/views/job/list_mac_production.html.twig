{% extends 'base.html.twig' %}

{% block headerTitle %}MAC Production Jobs{% endblock %}

{% block breadcrumbs %}
    <li class="active"><span>MAC Production Jobs</span></li>
{% endblock %}

{% block afterBreadcrumbs %}
    <span style="float:right"><a href="{{ path('print_mac_production', {'sales_order': sales_order, 'planner_esd': planner_esd}) }}" class="btn btn-sm btn-warning">Print</a></span>
{% endblock %}

{% block body %}
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <form action="{{ path('mac_production') }}" method="GET">
                <div class="row">
                    <div class="col-sm-3">
                        <label class="form-label">Sales Order #</label>
                        <input type="text" name="sales_order" value="{{ sales_order }}" placeholder="Type in SO #" class="form-control">
                    </div>
                    <div class="col-sm-3">
                        <label class="form-label">Planner ESD</label>
                        <input type="text" name="planner_esd" value="{{ planner_esd }}" placeholder="Select Planner ESD" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-info" value="Search">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <h2>MAC Production Job list</h2>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th style="border:solid;width:10ch" rowspan=2>Name</th>
            <th style="border:solid;width:6ch" rowspan=2>SO #</th>
            <th style="border:solid;width:10ch" rowspan=2>Type</th>
            <th style="border:solid;width:6ch" rowspan=2>Model</th>
            <th style="border:solid;width:4ch" rowspan=2>Qty</th>
            <th style="border:solid;width:6ch" rowspan=2>MO #</th>
            <th style="border:solid;width:6ch" rowspan=2>MAC PO#</th>
            <th style="border:solid;min-width:7ch" rowspan=2>Planner ESD (Week #)</th>
            <th style="border:solid;text-align:center" colspan=4>Shipped</th>
            <th style="border:solid;min-width:7ch" rowspan=2>Kit Completion Date</th>
            <th style="border:solid;text-align:center" colspan=4>Short #1</th>
            <th style="border:solid;text-align:center" colspan=4>Short #2</th>
            <th style="border:solid;text-align:center" colspan=4>Short #3</th>
            <th style="border:solid;text-align:center" colspan=4>Short #4</th>
            <th style="border:solid;width:4h" rowspan=2>LOC</th>
            <th style="border:solid;width:4ch" rowspan=2>Paint LOC</th>
            <th style="border:solid;width:4ch" rowspan=2>Sub Build</th>
            <th style="border:solid;width:7ch" rowspan=2>Build Completion Date</th>
            <th style="border:solid;width:3ch" rowspan=2>Built By</th>
        </tr>
        <tr>
            {# Shipped #}
            <th style="border:solid;min-width:12ch">Serials</th>
            <th style="border:solid;min-width:7ch">Date</th>
            <th style="border:solid;width:4ch">Complete or Partial</th>
            <th style="border:solid;min-width:7ch">2nd Date</th>
            {# Short #1 #}
            <th style="border:solid;min-width:11ch">Part Number</th>
            <th style="border:solid;width:4ch">Painted Part</th>
            <th style="border:solid;min-width:7ch">EDD</th>
            <th style="border:solid;min-width:7ch">Received Date</th>
            {# Short #2 #}
            <th style="border:solid;min-width:11ch">Part Number</th>
            <th style="border:solid;width:4ch">Painted Part</th>
            <th style="border:solid;min-width:7ch">EDD</th>
            <th style="border:solid;min-width:7ch">Received Date</th>
            {# Short #3 #}
            <th style="border:solid;min-width:11ch">Part Number</th>
            <th style="border:solid;width:4ch">Painted Part</th>
            <th style="border:solid;min-width:7ch">EDD</th>
            <th style="border:solid;min-width:7ch">Received Date</th>
            {# Short #4 #}
            <th style="border:solid;min-width:11ch">Part Number</th>
            <th style="border:solid;width:4ch">Painted Part</th>
            <th style="border:solid;min-width:7ch">EDD</th>
            <th style="border:solid;min-width:7ch">Received Date</th>
        </tr>            
        </thead>
        <tbody>
            {% for job in jobs %}
                {% set late = 0 %}
                {# highlight red if planner ESD has past and build completion date is empty #}
                {% if job.plannerEstimatedShipDate < date() and job.scheduling.completionDate is null %}
                    {% set late = 1 %}
                {% endif %}
            <tr {% if late %}bgcolor="lightcoral"{% endif %}>
                <td style="font-size:small; {% if late %}color:white{% endif %}">{{ job.name }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.salesOrder }}</td>   
                <td {% if late %}style="color:white"{% endif %}>{{ job.type }}</td>
                <td style="word-break:break-all; {% if late %}color:white{% endif %}">{{ job.model }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.quantity }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.manufacturingOrder }}</td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="macPurchaseOrder" data-name="macPurchaseOrder" data-pk="{{job.id}}" data-url="{{ path('edit_job_mac_purchase_order', {'jobId': job.id}) }}">{{ job.macPurchaseOrder }}</a>
                    {% else %}
                        {{ job.macPurchaseOrder }}
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if job.plannerEstimatedShipDate %}
                        {{ job.plannerEstimatedShipDate|date('m-d') }} ({{ job.plannerEstimatedShipDate|date('W') }})
                    {% else %}
                        TBD
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.bom.serialsGeneratedDate ? job.bom.serialsGeneratedDate|date('m-d') : "Not Generated Yet" }}</td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="shipDate" data-name="shipDate" data-pk="{{job.id}}" data-url="{{ path('edit_shipping_ship_date', {'jobId': job.id}) }}">{{ job.shipping and job.shipping.shipDate ? job.shipping.shipDate | date('m-d') : "" }}</a>
                    {% else %}
                        {{ job.shipping and job.shipping.shipDate ? job.shipping.shipDate | date('m-d') : "" }}
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="isComplete" data-name="isComplete" data-pk="{{job.id}}" data-value="{{job.shipping ? job.shipping.isComplete : ''}}" data-url="{{ path('edit_shipping_is_complete', {'jobId': job.id}) }}">
                            {% if job.shipping and job.shipping.isComplete == 2 %}
                                Complete
                            {% elseif job.shipping and job.shipping.isComplete == 1 %}
                                Partial
                            {% endif %}
                        </a>
                    {% else %}
                        {% if job.shipping and job.shipping.isComplete == 2 %}
                            Complete
                        {% elseif job.shipping and job.shipping.isComplete == 1 %}
                            Partial
                        {% endif %}
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="secondShipDate" data-name="secondShipDate" data-pk="{{job.id}}" data-url="{{ path('edit_shipping_second_ship_date', {'jobId': job.id}) }}">{{ job.shipping and job.shipping.secondShipDate ? job.shipping.secondShipDate | date('m-d') : "" }}</a>
                    {% else %}
                        {{ job.shipping and job.shipping.secondShipDate ? job.shipping.secondShipDate | date('m-d') : "" }}
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting and job.kitting.completionDate ? job.kitting.completionDate | date('m-d') : ""}}</td>
                {# Short #1 #}
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort1.partNumber | default("") }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort1.paintedPart | default("") }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting and job.kitting.kittingShort1 and job.kitting.kittingShort1.estimatedDeliveryDate ? job.kitting.kittingShort1.estimatedDeliveryDate | date('m-d') : "" }}</td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="receivedDate1" data-name="receivedDate1" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_received_date', {'shortId': (job.kitting.kittingShort1)?job.kitting.kittingShort1.id:0}) }}">{{ (job.kitting.kittingShort1 and job.kitting.kittingShort1.receivedDate) ? job.kitting.kittingShort1.receivedDate | date('m-d') : "" }}</a>
                    {% else %}
                        {{ (job.kitting.kittingShort1 and job.kitting.kittingShort1.receivedDate) ? job.kitting.kittingShort1.receivedDate | date('m-d') : "" }}
                    {% endif %}
                </td>
                {# Short #2 #}
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort2.partNumber | default("") }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort2.paintedPart | default("") }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort2 and job.kitting.kittingShort2 and job.kitting.kittingShort2.estimatedDeliveryDate ? job.kitting.kittingShort2.estimatedDeliveryDate | date('m-d') : "" }}</td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="receivedDate2" data-name="receivedDate2" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_received_date', {'shortId': (job.kitting.kittingShort2)?job.kitting.kittingShort2.id:0}) }}">{{ (job.kitting.kittingShort2 and job.kitting.kittingShort2.receivedDate) ? job.kitting.kittingShort2.receivedDate | date('m-d') : "" }}</a>
                    {% else %}
                        {{ (job.kitting.kittingShort2 and job.kitting.kittingShort2.receivedDate) ? job.kitting.kittingShort2.receivedDate | date('m-d') : "" }}
                    {% endif %}
                </td>
                {# Short #3 #}
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort3.partNumber | default("") }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort3.paintedPart | default("") }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort3 and job.kitting.kittingShort3 and job.kitting.kittingShort3.estimatedDeliveryDate ? job.kitting.kittingShort3.estimatedDeliveryDate | date('m-d') : "" }}</td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="receivedDate3" data-name="receivedDate3" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_received_date', {'shortId': (job.kitting.kittingShort3)?job.kitting.kittingShort3.id:0}) }}">{{ (job.kitting.kittingShort3 and job.kitting.kittingShort3.receivedDate) ? job.kitting.kittingShort3.receivedDate | date('m-d') : "" }}</a>
                    {% else %}
                        {{ (job.kitting.kittingShort3 and job.kitting.kittingShort3.receivedDate) ? job.kitting.kittingShort3.receivedDate | date('m-d') : "" }}
                    {% endif %}
                </td>
                {# Short #4 #}
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort4.partNumber | default("") }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort4.paintedPart | default("") }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.kitting.kittingShort4 and job.kitting.kittingShort4 and job.kitting.kittingShort4.estimatedDeliveryDate ? job.kitting.kittingShort4.estimatedDeliveryDate | date('m-d') : "" }}</td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="receivedDate4" data-name="receivedDate4" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_received_date', {'shortId': (job.kitting.kittingShort4)?job.kitting.kittingShort4.id:0}) }}">{{ (job.kitting.kittingShort4 and job.kitting.kittingShort4.receivedDate) ? job.kitting.kittingShort4.receivedDate | date('m-d') : "" }}</a>
                    {% else %}
                        {{ (job.kitting.kittingShort4 and job.kitting.kittingShort4.receivedDate) ? job.kitting.kittingShort4.receivedDate | date('m-d') : "" }}
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="location" data-name="location" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_location', {'jobId': job.id}) }}">{{job.kitting.location}}</a>
                    {% else %}
                        {{job.kitting.location}}
                    {% endif %}
                </td>
                {# Paint #}
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="paintLocation" data-name="paintLocation" data-pk="{{job.id}}" data-value="{{job.paint ? job.paint.location}}" data-url="{{ path('edit_paint_location', {'paintId': job.paint ? job.paint.id : 0}) }}">{{ job.paint ? job.paint.location : "" }}</a>
                    {% else %}
                        {{ job.paint ? job.paint.location : "" }}
                    {% endif %}
                </td>
                {# Scheduling #}                
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="subReady" data-name="subReady" data-pk="{{job.id}}" data-value="{{job.scheduling.subReady}}" data-url="{{ path('edit_scheduling_sub_ready', {'jobId': job.id}) }}">{{ job.scheduling.subReady ? "Yes" : "No"}}</a>
                    {% else %}
                        {{ job.scheduling.subReady ? "Yes" : "No"}}
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="completionDate" data-name="completionDate" data-pk="{{job.id}}" data-url="{{ path('edit_scheduling_completion_date', {'jobId': job.id}) }}">{{ job.scheduling.completionDate ? job.scheduling.completionDate | date('m-d') : "" }}</a>
                    {% else %}
                        {{ job.scheduling.completionDate ? job.scheduling.completionDate | date('m-d') : "" }}
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if is_granted('ROLE_MAC_PRODUCTION') %}
                        <a href="#" class="builtBy" data-name="builtBy" data-pk="{{job.id}}" data-url="{{ path('edit_scheduling_built_by', {'jobId': job.id}) }}">{{ job.scheduling.builtBy ? job.scheduling.builtBy : "" }}</a>
                    {% else %}
                        {{ job.scheduling.builtBy ? job.scheduling.builtBy : "" }}
                    {% endif %}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
