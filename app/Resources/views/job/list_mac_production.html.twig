                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.subReady').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                emptytext: 'Empty',
                container: 'body',
                placement: 'left',
                value: obj.dataset.value,
                source: [
                  {value: 1, text: 'Yes'},
                  {value: 0, text: 'No'},
                ],
                url: obj.dataset.url,
                title: 'Sub Ready?',
