        $('.table').fixedThead({
          height: 400,
          row: 2,
          col: 2
        });

        $("input[name='planner_esd'").datepicker({
            format: 'yyyy-mm-dd',
            autoclose: true,
        });        

        //toggle `popup` / `inline` mode
        $.fn.editable.defaults.mode = 'popup';

        $('.macPurchaseOrder').each(function(i, obj) {
            $(this).editable({
                type: 'text',
