{% extends 'base.html.twig' %}

{% block headerTitle %}BOM Builder Jobs{% endblock %}

{% block breadcrumbs %}
    <li class="active"><span>BOM Builder Jobs</span></li>
{% endblock %}

{% block body %}
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <form action="{{ path('bom_builder') }}" method="GET">
                <div class="row">
                    <div class="col-sm-3">
                        <label class="form-label">Name</label>
                        <input type="text" name="name" value="{{ name }}" placeholder="Type in name" class="form-control">
                    </div>
                    <div class="col-sm-3">
                        <label class="form-label">Sales Order #</label>
                        <input type="text" name="sales_order" value="{{ sales_order }}" placeholder="Type in SO #" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-info" value="Search">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <h2>BOM Builder Job list</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th style="border:solid" rowspan=2>Name</th>
                <th style="border:solid" rowspan=2>SO #</th>
                <th style="border:solid;text-align:center" colspan=6>Job</th>
                <th style="border:solid;text-align:center" colspan=1>BOM</th>
            </tr>
            <tr>
                <th style="border:solid">Type</th>
                <th style="border:solid">Model</th>
                <th style="border:solid">Qty</th>
                <th style="border:solid">LOC</th>
                <th style="border:solid">Planner ESD<br>(Week #)</th>
                <th style="border:solid">MO #</th>
                <th style="border:solid">Serials</th>
            </tr>
        </thead>
        <tbody>
            {% for job in jobs %}
                {% set late = 0 %}
                {% if job.estimatedShipDate and job.plannerEstimatedShipDate and job.plannerEstimatedShipDate < date() and job.manufacturingOrder is null %}
                    {% set difference = date(job.plannerEstimatedShipDate).diff(date()) %}
                    {% if difference.days > 3 %}
                        {% set late = 1 %}
                    {% endif %}
                {% endif %}
            <tr {% if late %}bgcolor="lightcoral"{% endif %}>
                <td style="font-size:small;{% if late %}color:white{% endif %}">{{ job.name }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.salesOrder }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.type }}</td>
                <td style="word-break:break-all;{% if late %}color:white{% endif %}">{{ job.model }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.quantity }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ job.buildLocation.name }}</td>
                <td {% if late %}style="color:white"{% endif %}>
                    {% if job.plannerEstimatedShipDate %}
                        {{ job.plannerEstimatedShipDate|date('m-d') }} ({{ job.plannerEstimatedShipDate|date('W') }})
                    {% else %}
                        TBD
                    {% endif %}
                </td>
                <td {% if late %}style="color:white"{% endif %}><a href="#" class="manufacturingOrder" data-name="manufacturingOrder" data-pk="{{job.id}}" data-url="{{ path('edit_job_manufacturing_order', {'jobId': job.id}) }}">{{ job.manufacturingOrder }}</a></td>
                <td {% if late %}style="color:white"{% endif %}><a href="#" class="serialsGeneratedDate" data-name="serialsGeneratedDate" data-pk="{{job.id}}" data-url="{{ path('edit_bom_serials_generated_date', {'jobId': job.id}) }}">{{ job.bom and job.bom.serialsGeneratedDate ? job.bom.serialsGeneratedDate|date('m-d') : "" }}</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
    function pad(str)
    {
        if (str.length == 1) {
            return "0" + str;
        } else {
            return str;
        }
    }

    $(document).ready(function() {
        $('.table').fixedThead({
          height: 400,
          row: 2,
          col: 2
        });

        //toggle `popup` / `inline` mode
        $.fn.editable.defaults.mode = 'popup';

        $('.manufacturingOrder').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Manufacturing Order #',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                    else {
                        var now = new Date();
                        var month = now.getMonth() + 1;
                        var date = now.getDate();
                        var nowStr = now.getFullYear() + "-" + pad(month.toString()) + "-" + pad(date.toString());
                        $(".issuedDate_"+obj.dataset.pk).text(nowStr);
                    }
                }
            });
        });

        $('.serialsGeneratedDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Serials Generated Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.shipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.isComplete').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                emptytext: 'Empty',
                container: 'body',
                placement: 'left',
                value: obj.dataset.value,
                source: [
                  {value: 2, text: 'Complete'},
                  {value: 1, text: 'Partial'}
                ],
                url: obj.dataset.url,
                title: 'Is Complete?',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.secondShipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Second Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

    });
    </script>
{% endblock %}