{% extends 'base.html.twig' %}

{% block headerTitle %}Receiver Parts{% endblock %}

{% block breadcrumbs %}
    <li class="active"><span>Receiver Parts</span></li>
{% endblock %}

{% block body %}
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <form action="{{ path('receiver') }}" method="GET">
                <div class="row">
                    <div class="col-sm-3">
                        <label class="form-label">Part #</label>
                        <input type="text" name="part_number" value="{{ part_number }}" placeholder="Type in part #" class="form-control">
                    </div>
                    <div class="col-sm-3">
                        <label class="form-label">Vendor PO #</label>
                        <input type="text" id="vendor_po_number" name="vendor_po_number" value="{{ vendor_po_number }}" placeholder="Type in Vendor PO #" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-info" value="Search">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <h2>Receiver Part list</h2>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th style="border:solid;min-width:11ch">Part Number</th>
            <th style="border:solid;min-width:12ch">Date Needed</th>
            <th style="border:solid;min-width:12ch">EDD</th>
            <th style="border:solid;width:15ch">Vendor</th>
            <th style="border:solid;width:6ch">Vendor PO#</th>
            <th style="border:solid;width:6ch">Mod WO#</th>
            <th style="border:solid;min-width:12ch">Received Date</th>
            <th style="border:solid;width:20ch">Notes</th>
            <th style="border:solid;width:10ch">Job Name</th>
            <th style="border:solid;width:6ch">Job SO #</th>
            <th style="border:solid;width:4ch">Qty</th>
            <th style="border:solid">Updated by</th>
        </tr>
        </thead>
        <tbody>
            {% for part in parts %}
                {% set late = 0 %}
                {% if (part.estimatedDeliveryDate and part.estimatedDeliveryDate < date()) or (part.dateNeeded and part.dateNeeded < date()) and part.receivedDate is null %}
                    {% set late = 1 %}
                {% endif %}
            <tr {% if late %}bgcolor="indianred"{% endif %}>
                <td {% if late %}style="color:white"{% endif %}>{{ part.partNumber}}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ part.dateNeeded ? part.dateNeeded | date('Y-m-d') : "" }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ part.estimatedDeliveryDate ? part.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ part.vendor }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ part.vendorPoNumber }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ part.modWo }}</td>
                <td {% if late %}style="color:white"{% endif %}><a href="#" class="receivedDate" data-name="receivedDate" data-pk="{{part.id}}" data-url="{{ path('edit_kitting_short_received_date', {'shortId': part.id}) }}">{{ part.receivedDate ? part.receivedDate | date('Y-m-d') : "" }}</a></td>
                <td {% if late %}style="color:white"{% endif %}>{{ parts.notes | default("") }}</td>
                <td style="font-size:xx-small; {% if late %}color:white{% endif %}">{{ part.kitting and part.kitting.job ? part.kitting.job.name }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ part.kitting and part.kitting.job ? part.kitting.job.salesOrder }}</td>   
                <td {% if late %}style="color:white"{% endif %}>{{ part.kitting and part.kitting.job ? part.kitting.job.quantity }}</td>
                <td {% if late %}style="color:white"{% endif %}>{{ part.updatedBy }}<br>({{ part.updateTime|date('Y-m-d') }})</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
    $(document).ready(function() {
        $('.table').fixedThead({
          height: 400,
          row: 1,
          col: 1
        });
        //toggle `popup` / `inline` mode
        $.fn.editable.defaults.mode = 'popup';
        
        $('.receivedDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Received Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

    });
    </script>
{% endblock %}