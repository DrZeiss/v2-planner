{% extends 'base.html.twig' %}

{% block headerTitle %}Shipper Jobs{% endblock %}

{% block breadcrumbs %}
    <li class="active"><span>Shipper Jobs</span></li>
{% endblock %}

{% block body %}
    <h2>Shipper Job list</h2>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th style="border:solid;width:10ch" rowspan=2>Name</th>
                <th style="border:solid;width:6ch" rowspan=2>SO #</th>
                <th style="border:solid;width:10ch" rowspan=2>Type</th>
                <th style="border:solid;width:6ch" rowspan=2>Model</th>
                <th style="border:solid;width:4ch" rowspan=2>Qty</th>
                <th style="border:solid;width:6ch" rowspan=2>MO #</th>
                <th style="border:solid;min-width:12ch" rowspan=2>Planner ESD<br>(Week #)</th>
                <th style="border:solid;text-align:center" colspan=3>Shipped</th>
                <th style="border:solid" rowspan=2>Last Updated by</th>
            </tr>
            <tr>
                {# Shipped #}
                <th style="border:solid;min-width:12ch">Date</th>
                <th style="border:solid;width:4ch">Complete or Partial</th>
                <th style="border:solid;min-width:12ch">2nd Date</th>
            </tr>
        </thead>
        <tbody>
            {% for job in jobs %}
            <tr>
                <td style="font-size:xx-small">{{ job.name }}</td>
                <td>{{ job.salesOrder }}</td>
                <td>{{ job.type }}</td>
                <td style="word-break:break-all">{{ job.model }}</td>
                <td>{{ job.quantity }}</td>
                <td>{{ job.manufacturingOrder }}</td>
                <td style=
                    {% if job.estimatedShipDate and job.plannerEstimatedShipDate and date(job.plannerEstimatedShipDate) > date(job.estimatedShipDate) %}
                        "background-color:indianred;color:white"
                    {% elseif job.scheduling and job.scheduling.priority > 0 %}
                        "background-color:yellow"
                    {% endif %}
                    >
                    {% if job.plannerEstimatedShipDate %}
                        {{ job.plannerEstimatedShipDate|date('Y-m-d') }} ({{ job.plannerEstimatedShipDate|date('W') }})
                    {% else %}
                        TBD
                    {% endif %}
                </td>
                {# Shipped #}
                <td><a href="#" class="shipDate" data-name="shipDate" data-pk="{{job.id}}" data-url="{{ path('edit_shipping_ship_date', {'jobId': job.id}) }}">{{ job.shipping and job.shipping.shipDate ? job.shipping.shipDate | date('Y-m-d') : "" }}</a></td>
                <td><a href="#" class="isComplete" data-name="isComplete" data-pk="{{job.id}}" data-value="{{job.shipping ? job.shipping.isComplete : ''}}" data-url="{{ path('edit_shipping_is_complete', {'jobId': job.id}) }}">{% if job.shipping and job.shipping.isComplete == 2 %}Complete{% elseif job.shipping and job.shipping.isComplete == 1 %}Partial{% else %}N/A{% endif %}</a></td>
                <td><a href="#" class="secondShipDate" data-name="secondShipDate" data-pk="{{job.id}}" data-url="{{ path('edit_shipping_second_ship_date', {'jobId': job.id}) }}">{{ job.shipping and job.shipping.secondShipDate ? job.shipping.secondShipDate | date('Y-m-d') : "" }}</a></td>
                <td>{{ job.shipping ? job.shipping.updatedBy : "" }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
    $(document).ready(function() {
        $('.table').fixedThead({
          height: 400,
          row: 2,
          col: 2
        });
        //toggle `popup` / `inline` mode
        $.fn.editable.defaults.mode = 'popup';

        $('.shipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.isComplete').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                emptytext: 'N/A',
                container: 'body',
                placement: 'left',
                value: obj.dataset.value,
                source: [
                  {value: 2, text: 'Complete'},
                  {value: 1, text: 'Partial'}
                ],
                url: obj.dataset.url,
                title: 'Is Complete?',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.secondShipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Second Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

    });
    </script>
{% endblock %}