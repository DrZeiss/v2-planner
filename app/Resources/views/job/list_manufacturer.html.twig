                    <td style="width:100px"><a href="#" class="modDoneDate4" data-name="modDoneDate4" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_mod_done_date', {'shortId': (job.kitting.kittingShort4) ? job.kitting.kittingShort4.id : 0}) }}">{{ job.kitting.kittingShort4 and job.kitting.kittingShort4.modDoneDate ? job.kitting.kittingShort4.modDoneDate | date('Y-m-d') : "" }}</a></td>
                {% endif %}
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

