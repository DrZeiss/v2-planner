{% extends 'base.html.twig' %}

{% block headerTitle %}Manufacturer Jobs{% endblock %}

{% block breadcrumbs %}
    <li class="active"><span>Manufacturer Jobs</span></li>
{% endblock %}

{% block body %}
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <form action="{{ path('manufacturer') }}" method="GET">
                <div class="row">
                    <div class="col-sm-5">
                        <label class="form-label">Date Needed Range</label>
                        <div class="input-daterange input-group">
                        <input type="text" name="date_needed_from" value="{{ date_needed_from }}" class="form-control">
                        <span class="input-group-addon">to</span>
                        <input type="text" name="date_needed_to" value="{{ date_needed_to }}" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-info" value="Search">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <h2>Manufacturer Job list</h2>
    <table class="table table-bordered table-striped table-hover table-freeze-multi" data-scroll-height="500" data-cols-number="2">
        <thead>
        <tr>
            <th style="width:100px;border:solid;background-color:white" rowspan=2>Name</th>
            <th style="width:100px;border:solid;background-color:white" rowspan=2>SO #</th>
            <th style="width:100px;border:solid" rowspan=2>ESD</th>
            <th style="width:100px;border:solid" rowspan=2>Type</th>
            <th style="width:100px;border:solid" rowspan=2>Model</th>
            <th style="width:100px;border:solid" rowspan=2>Qty</th>
            <th style="width:100px;border:solid" rowspan=2>MO #</th>
            <th style="width:100px;border:solid" rowspan=2>Updated by</th>
            <th style="width:500px;border:solid;text-align:center" colspan=5>Short #1</th>
            <th style="width:500px;border:solid;text-align:center" colspan=5>Short #2</th>
            <th style="width:500px;border:solid;text-align:center" colspan=5>Short #3</th>
            <th style="width:500px;border:solid;text-align:center" colspan=5>Short #4</th>
        </tr>
        <tr>
            {# Short #1 #}
            <th style="width:100px;border:solid">Part Number</th>
            <th style="width:100px;border:solid">Date Needed</th>
            <th style="width:100px;border:solid">Mod WO#</th>
            <th style="width:100px;border:solid">EDD</th>
            <th style="width:100px;border:solid">Mod Done Date</th>
            {# Short #2 #}
