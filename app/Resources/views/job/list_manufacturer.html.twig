                    <td style="width:100px">{{ job.kitting.kittingShort4.partNumber | default("") }}</a></td>
                    <td style="width:100px">{{ job.kitting.kittingShort4 and job.kitting.kittingShort4.dateNeeded ? job.kitting.kittingShort4.dateNeeded | date('Y-m-d') : "" }}</td>
