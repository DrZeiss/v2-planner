{% extends 'base.html.twig' %}

{% block headerTitle %}Scheduler Jobs{% endblock %}

{% block breadcrumbs %}
    <li class="active"><span>Scheduler Jobs</span></li>
{% endblock %}

{% block body %}
    <div class="ibox float-e-margins">
        <div class="ibox-content">
            <form action="{{ path('scheduler') }}" method="GET">
                <div class="row">
                    <div class="col-sm-3">
                        <label class="form-label">Job Name</label>
                        <input type="text" name="name" value="{{ name }}" placeholder="Type in job name" class="form-control">
                    </div>
                    <div class="col-sm-3">
                        <label class="form-label">Estimated Ship Date</label>
                        <input type="text" id="esd" name="esd" value="{{ esd }}" placeholder="YYYY-MM-DD" class="form-control">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <div class="pull-right">
                            <input type="submit" class="btn btn-info" value="Search">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <h2>Scheduler Job list</h2>
    <table class="table table-bordered table-striped table-hover">
        <thead>
        <tr>
            <th style="border:solid" rowspan=2>Name</th>
            <th style="border:solid" rowspan=2>SO #</th>
            <th style="border:solid;text-align:center" colspan=8>Job</th>
            <th style="border:solid;text-align:center" colspan=3>Shipped</th>
            <th style="border:solid;text-align:center" colspan=2>BOM</th>
            <th style="border:solid;text-align:center" colspan=3>Kitting</th>
            <th style="border:solid;text-align:center" colspan=7>Short #1</th>
            <th style="border:solid;text-align:center" colspan=7>Short #2</th>
            <th style="border:solid;text-align:center" colspan=7>Short #3</th>
            <th style="border:solid;text-align:center" colspan=7>Short #4</th>
            <th style="border:solid;text-align:center" colspan=3>Scheduling</th>
            <th style="border:solid" rowspan=2>Last Updated by</th>
        </tr>
        <tr>
            {# Job #}
            <th style="border:solid">ESD</th>
            <th style="border:solid">Type</th>
            <th style="border:solid">Model</th>
            <th style="border:solid">Qty</th>
            <th style="border:solid">MO#</th>
            <th style="border:solid">MAC PO#</th>
            <th style="border:solid">Build Location</th>
            <th style="border:solid">Planner ESD (Week#)</th>
            {# Shipped #}
            <th style="border:solid">1st Ship Date </th>
            <th style="border:solid">Complete or Partial</th>
            <th style="border:solid">2nd Ship Date</th>
            {# BOM #}
            <th style="border:solid">Issued Date</th>
            <th style="border:solid">Issued By</th>
            {# Kitting #}
            <th style="border:solid">Completion Date</th>
            <th style="border:solid">Completed By</th>
            <th style="border:solid">Filled Completely?</th>
            {# Short #1 #}
            <th style="border:solid">Part Number</th>
            <th style="border:solid">Painted Part</th>
            <th style="border:solid">Date Needed</th>
            <th style="border:solid">EDD</th>
            <th style="border:solid">Mod Done Date</th>
            <th style="border:solid">Received Date</th>
            <th style="border:solid">Notes</th>
            {# Short #2 #}
            <th style="border:solid">Part Number</th>
            <th style="border:solid">Painted Part</th>
            <th style="border:solid">Date Needed</th>
            <th style="border:solid">EDD</th>
            <th style="border:solid">Mod Done Date</th>
            <th style="border:solid">Received Date</th>
            <th style="border:solid">Notes</th>
            {# Short #3 #}
            <th style="border:solid">Part Number</th>
            <th style="border:solid">Painted Part</th>
            <th style="border:solid">Date Needed</th>
            <th style="border:solid">EDD</th>
            <th style="border:solid">Mod Done Date</th>
            <th style="border:solid">Received Date</th>
            <th style="border:solid">Notes</th>
            {# Short #4 #}
            <th style="border:solid">Part Number</th>
            <th style="border:solid">Painted Part</th>
            <th style="border:solid">Date Needed</th>
            <th style="border:solid">EDD</th>
            <th style="border:solid">Mod Done Date</th>
            <th style="border:solid">Received Date</th>
            <th style="border:solid">Notes</th>
            {# Scheduling #}
            <th style="border:solid">Priority</th>
            <th style="border:solid">Sub Ready</th>
            <th style="border:solid">Build Completion Date</th>                
        </tr>            
        </thead>
        <tbody>
            {% for job in jobs %}
            <tr>
                {# Job #}
                <td><a href="#" class="name" data-name="name" data-pk="{{job.id}}" data-url="{{ path('edit_job_name', {'jobId': job.id}) }}">{{ job.name }}</a></td>
                <td><a href="#" class="salesOrder" data-name="salesOrder" data-pk="{{job.id}}" data-url="{{ path('edit_job_sales_order', {'jobId': job.id}) }}">{{ job.salesOrder }}</a></td>   
                <td><a href="#" class="estimatedShipDate" data-name="estimatedShipDate" data-pk="{{job.id}}" data-url="{{ path('edit_job_estimated_ship_date', {'jobId': job.id}) }}">{{ job.estimatedShipDate|date('Y-m-d') }}</a></td>
                <td><a href="#" class="type" data-name="type" data-pk="{{job.id}}" data-url="{{ path('edit_job_type', {'jobId': job.id}) }}">{{ job.type }}</a></td>
                <td><a href="#" class="model" data-name="model" data-pk="{{job.id}}" data-url="{{ path('edit_job_model', {'jobId': job.id}) }}">{{ job.model }}</a></td>
                <td><a href="#" class="quantity" data-name="quantity" data-pk="{{job.id}}" data-url="{{ path('edit_job_quantity', {'jobId': job.id}) }}">{{ job.quantity }}</a></td>
                <td><a href="#" class="manufacturingOrder" data-name="manufacturingOrder" data-pk="{{job.id}}" data-url="{{ path('edit_job_manufacturing_order', {'jobId': job.id}) }}">{{ job.manufacturingOrder }}</a></td>                    
                <td>{{ job.macPurchaseOrder }}</td>
                <td><a href="#" class="buildLocation" data-name="buildLocation" data-pk="{{job.id}}" data-value="{{job.buildLocation.id}}" data-url="{{ path('edit_job_build_location', {'jobId': job.id}) }}">{{ job.buildLocation.name }}</a></td>
                <td>
                    <a href="#" class="plannerEstimatedShipDate" data-name="plannerEstimatedShipDate" data-pk="{{job.id}}" data-url="{{ path('edit_job_planner_estimated_ship_date', {'jobId': job.id}) }}">
                        {% if job.plannerEstimatedShipDate %}
                            {{ job.plannerEstimatedShipDate|date('Y-m-d') }} ({{ job.plannerEstimatedShipDate|date('W') }})
                        {% else %}
                            TBD
                        {% endif %}
                    </a>
                </td>
                {# Shipped #}
                <td><a href="#" class="shipDate" data-name="shipDate" data-pk="{{job.id}}" data-url="{{ path('edit_shipping_ship_date', {'jobId': job.id}) }}">{{ job.shipping and job.shipping.shipDate ? job.shipping.shipDate | date('Y-m-d') : "" }}</a></td>
                <td>
                    {% if job.shipping and job.shipping.isComplete == 2 %}
                        Complete
                    {% elseif job.shipping and job.shipping.isComplete == 1 %}
                        Partial
                    {% else %}
                        N/A
                    {% endif %}
                </td>
                <td><a href="#" class="secondShipDate" data-name="secondShipDate" data-pk="{{job.id}}" data-url="{{ path('edit_shipping_second_ship_date', {'jobId': job.id}) }}">{{ job.shipping and job.shipping.secondShipDate ? job.shipping.secondShipDate | date('Y-m-d') : "" }}</a></td>
                {# BOM #}
                <td>{{ job.bom and job.bom.issuedDate ? job.bom.issuedDate|date('Y-m-d') : "" }}</td>
                <td>{{ job.bom ? job.bom.issuedBy : ""}}</td>
                {# Kitting #}
                <td>{{ job.kitting ? job.kitting.completionDate|date('Y-m-d') : ""}}</td>
                <td>{{ job.kitting ? job.kitting.updatedBy : "" }}</td>
                <td>
                    {% if job.kitting and job.kitting.filledCompletely is null %}
                        N/A
                    {% elseif job.kitting and (job.kitting.filledCompletely == 1) %}
                        Yes
                    {% elseif job.kitting and (job.kitting.filledCompletely == 0) %}
                        No
                    {% else %}
                        Unknown
                    {% endif %}
                </td>
                {# Short #1 #}
                {% if job.kitting.kittingShort1 is null %}
                    <td></td><td></td><td></td><td></td><td></td><td></td><td></td>
                {% else %}
                    <td><a href="#" class="shortPartNumber" data-name="shortPartNumber" data-pk="{{job.kitting ? job.kitting.id}}" data-value="{{job.kitting and job.kitting.kittingShort1 ? job.kitting.kittingShort1.partNumber}}" data-url="{{ path('edit_kitting_short1', {'jobId': job.id, 'shortId': (job.kitting and job.kitting.kittingShort1) ? job.kitting.kittingShort1.id : 0}) }}">{{ job.kitting and job.kitting.kittingShort1 ? job.kitting.kittingShort1.partNumber : "" }}</a></td>
                    <td><a href="#" class="paintedPart" data-name="paintedPart" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.kittingShort1 ? job.kitting.kittingShort1.paintedPart : 0}}" data-url="{{ path('edit_kitting_short_painted_part', {'shortId': (job.kitting.kittingShort1) ? job.kitting.kittingShort1.id : 0}) }}">{{ job.kitting.kittingShort1 ? job.kitting.kittingShort1.paintedPart : "" }}</a></td>
                    <td><a href="#" class="dateNeeded" data-name="dateNeeded" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_date_needed', {'shortId': (job.kitting.kittingShort1) ? job.kitting.kittingShort1.id : 0}) }}">{{ job.kitting.kittingShort1 and job.kitting.kittingShort1.dateNeeded ? job.kitting.kittingShort1.dateNeeded | date('Y-m-d') : "" }}</a></td>
                    <td>{{ job.kitting.kittingShort1 and job.kitting.kittingShort1.estimatedDeliveryDate ? job.kitting.kittingShort1.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                    <td>{{ job.kitting.kittingShort1 and job.kitting.kittingShort1.modDoneDate ? job.kitting.kittingShort1.modDoneDate | date('Y-m-d') : "" }}</td>
                    <td>{{ job.kitting.kittingShort1 and job.kitting.kittingShort1.receivedDate ? job.kitting.kittingShort1.receivedDate | date('Y-m-d') : "" }}</td>                    
                    <td><a href="#" class="notes" data-name="notes" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_notes', {'jobId': job.id, 'shortId': (job.kitting.kittingShort1) ? job.kitting.kittingShort1.id : 0}) }}">{{ job.kitting.kittingShort1 ? job.kitting.kittingShort1.notes : null }}</a></td>
                {% endif %}
                {# Short #2 #}
                {% if job.kitting.kittingShort2 is null %}
                    <td></td><td></td><td></td><td></td><td></td><td></td><td></td>
                {% else %}
                    <td><a href="#" class="shortPartNumber" data-name="shortPartNumber" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.kittingShort2 ? job.kitting.kittingShort2.partNumber}}" data-url="{{ path('edit_kitting_short2', {'jobId': job.id, 'shortId': (job.kitting.kittingShort2) ? job.kitting.kittingShort2.id : 0}) }}">{{ job.kitting.kittingShort2 ? job.kitting.kittingShort2.partNumber : "" }}</a></td>
                    <td><a href="#" class="paintedPart" data-name="paintedPart" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.kittingShort2 ? job.kitting.kittingShort2.paintedPart : 0}}" data-url="{{ path('edit_kitting_short_painted_part', {'shortId': (job.kitting.kittingShort2) ? job.kitting.kittingShort2.id : 0}) }}">{{ job.kitting.kittingShort2 ? job.kitting.kittingShort2.paintedPart : "" }}</a></td>
                    <td><a href="#" class="dateNeeded" data-name="dateNeeded" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_date_needed', {'shortId': (job.kitting.kittingShort2) ? job.kitting.kittingShort2.id : 0}) }}">{{ job.kitting.kittingShort2 and job.kitting.kittingShort2.dateNeeded ? job.kitting.kittingShort2.dateNeeded | date('Y-m-d') : "" }}</a></td>
                    <td>{{ job.kitting.kittingShort2 and job.kitting.kittingShort2.estimatedDeliveryDate ? job.kitting.kittingShort2.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                    <td>{{ job.kitting.kittingShort2 and job.kitting.kittingShort2.modDoneDate ? job.kitting.kittingShort2.modDoneDate | date('Y-m-d') : "" }}</td>
                    <td>{{ job.kitting.kittingShort2 and job.kitting.kittingShort2.receivedDate ? job.kitting.kittingShort2.receivedDate | date('Y-m-d') : "" }}</td>                    
                    <td><a href="#" class="notes" data-name="notes" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_notes', {'jobId': job.id, 'shortId': (job.kitting.kittingShort2) ? job.kitting.kittingShort2.id : 0}) }}">{{ job.kitting.kittingShort2 ? job.kitting.kittingShort2.notes : null }}</a></td>
                {% endif %}
                {# Short #3 #}
                {% if job.kitting.kittingShort3 is null %}
                    <td></td><td></td><td></td><td></td><td></td><td></td><td></td>
                {% else %}
                    <td><a href="#" class="shortPartNumber" data-name="shortPartNumber" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.kittingShort3 ? job.kitting.kittingShort3.partNumber}}" data-url="{{ path('edit_kitting_short3', {'jobId': job.id, 'shortId': (job.kitting.kittingShort3) ? job.kitting.kittingShort3.id : 0}) }}">{{ job.kitting.kittingShort3 ? job.kitting.kittingShort3.partNumber : "" }}</a></td>
                    <td><a href="#" class="paintedPart" data-name="paintedPart" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.kittingShort3 ? job.kitting.kittingShort3.paintedPart : 0}}" data-url="{{ path('edit_kitting_short_painted_part', {'shortId': (job.kitting.kittingShort3) ? job.kitting.kittingShort3.id : 0}) }}">{{ job.kitting.kittingShort3 ? job.kitting.kittingShort3.paintedPart : "" }}</a></td>
                    <td><a href="#" class="dateNeeded" data-name="dateNeeded" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_date_needed', {'shortId': (job.kitting.kittingShort3) ? job.kitting.kittingShort3.id : 0}) }}">{{ job.kitting.kittingShort3 and job.kitting.kittingShort3.dateNeeded ? job.kitting.kittingShort3.dateNeeded | date('Y-m-d') : "" }}</a></td>
                    <td>{{ job.kitting.kittingShort3 and job.kitting.kittingShort3.estimatedDeliveryDate ? job.kitting.kittingShort3.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                    <td>{{ job.kitting.kittingShort3 and job.kitting.kittingShort3.modDoneDate ? job.kitting.kittingShort3.modDoneDate | date('Y-m-d') : "" }}</td>
                    <td>{{ job.kitting.kittingShort3 and job.kitting.kittingShort3.receivedDate ? job.kitting.kittingShort3.receivedDate | date('Y-m-d') : "" }}</td>                    
                    <td><a href="#" class="notes" data-name="notes" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_notes', {'jobId': job.id, 'shortId': (job.kitting.kittingShort3) ? job.kitting.kittingShort3.id : 0}) }}">{{ job.kitting.kittingShort3 ? job.kitting.kittingShort3.notes : null }}</a></td>
                {% endif %}
                {# Short #4 #}
                {% if job.kitting.kittingShort4 is null %}
                    <td></td><td></td><td></td><td></td><td></td><td></td><td></td>
                {% else %}
                    <td><a href="#" class="shortPartNumber" data-name="shortPartNumber" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.kittingShort4 ? job.kitting.kittingShort4.partNumber}}" data-url="{{ path('edit_kitting_short4', {'jobId': job.id, 'shortId': (job.kitting.kittingShort4) ? job.kitting.kittingShort4.id : 0}) }}">{{ job.kitting.kittingShort4 ? job.kitting.kittingShort4.partNumber : "" }}</a></td>
                    <td><a href="#" class="paintedPart" data-name="paintedPart" data-pk="{{job.kitting.id}}" data-value="{{job.kitting.kittingShort4 ? job.kitting.kittingShort4.paintedPart : 0}}" data-url="{{ path('edit_kitting_short_painted_part', {'shortId': (job.kitting.kittingShort4) ? job.kitting.kittingShort4.id : 0}) }}">{{ job.kitting.kittingShort4 ? job.kitting.kittingShort4.paintedPart : "" }}</a></td>
                    <td><a href="#" class="dateNeeded" data-name="dateNeeded" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_date_needed', {'shortId': (job.kitting.kittingShort4) ? job.kitting.kittingShort4.id : 0}) }}">{{ job.kitting.kittingShort4 and job.kitting.kittingShort4.dateNeeded ? job.kitting.kittingShort4.dateNeeded | date('Y-m-d') : "" }}</a></td>
                    <td>{{ job.kitting.kittingShort4 and job.kitting.kittingShort4.estimatedDeliveryDate ? job.kitting.kittingShort4.estimatedDeliveryDate | date('Y-m-d') : "" }}</td>
                    <td>{{ job.kitting.kittingShort4 and job.kitting.kittingShort4.modDoneDate ? job.kitting.kittingShort4.modDoneDate | date('Y-m-d') : "" }}</td>
                    <td>{{ job.kitting.kittingShort4 and job.kitting.kittingShort4.receivedDate ? job.kitting.kittingShort4.receivedDate | date('Y-m-d') : "" }}</td>                    
                    <td><a href="#" class="notes" data-name="notes" data-pk="{{job.kitting.id}}" data-url="{{ path('edit_kitting_short_notes', {'jobId': job.id, 'shortId': (job.kitting.kittingShort4) ? job.kitting.kittingShort4.id : 0}) }}">{{ job.kitting.kittingShort4 ? job.kitting.kittingShort4.notes : null }}</a></td>
                {% endif %}
                {# Scheduling #}
                <td><a href="#" class="priority" data-name="priority" data-pk="{{job.id}}" data-url="{{ path('edit_scheduling_priority', {'jobId': job.id}) }}">{{ job.scheduling.priority }}</a></td>
                <td>{{ job.scheduling.subReady ? "Yes" : "No"}}</td>
                <td>{{ job.scheduling.completionDate ? job.scheduling.completionDate | date('Y-m-d') : "" }}</td>
                <td>{{ job.updatedBy }}<br>({{ job.updateTime | date('Y-m-d') }})</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    <script>
    $(document).ready(function() {
        $('.table').fixedThead({
          height: 500,
          row: 2,
          col: 2
        });
        //toggle `popup` / `inline` mode
        $.fn.editable.defaults.mode = 'popup';

        $('#esd').datepicker({
            format: 'yyyy-mm-dd'
        });

        $('.name').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Job Name',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.salesOrder').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Sales Order #',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.estimatedShipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Enter Estimated Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.type').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Type',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.model').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Model',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.quantity').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Quantity',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.manufacturingOrder').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Manufacturing Order #',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.buildLocation').each(function(i, obj) {
            $(this).editable({
                type: 'select',
                emptytext: 'N/A',
                container: 'body',
                placement: 'left',
                value: obj.dataset.value,
                source: [
                  {value: 1, text: 'MAC'},
                  {value: 2, text: 'V2'},
                ],
                url: obj.dataset.url,
                title: 'Build Location',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.plannerEstimatedShipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Enter Planner Estimated Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.shipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.secondShipDate').each(function(i, obj) {
            $(this).editable({
                type: 'date',
                container: 'body',
                placement: 'left',
                url: obj.dataset.url,
                title: 'Select Second Ship Date',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                }
            });
        });

        $('.shortPartNumber').each(function(i, obj) {
            $(this).editable({
                type: 'text',
                container: 'body',
                url: obj.dataset.url,
                title: 'Enter Part Number',
                success: function(response, newValue) {
                    if (response.status == 'error') return response.msg; //msg will be shown in editable form
                    else {
                        var newUrl = $(".shortPartNumber:eq(" + i + ")").data('url').replace("0", response.shortId);
                        $(".shortPartNumber:eq(" + i + ")").attr('data-url', newUrl);
                        $(".shortPartNumber:eq(" + i + ")").editable('option','url', newUrl);
                        newUrl = $(".paintedPart:eq(" + i + ")").data('url').replace("0", response.shortId);
                        $(".paintedPart:eq(" + i + ")").attr('data-url', newUrl);
                        $(".paintedPart:eq(" + i + ")").editable('option','url', newUrl);
                        newUrl = $(".dateNeeded:eq(" + i + ")").data('url').replace("0", response.shortId);
                        $(".dateNeeded:eq(" + i + ")").attr('data-url', newUrl);
