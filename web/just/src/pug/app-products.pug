                            tr
                              td.items-check.content-width
                                .checkbox.condensed
                                    input#p4(type='checkbox')
                                    label(for='p4')
                              td.items-name.text-nowrap Product 4
                              td.items-category.text-nowrap(data-filter="2") Category 2
