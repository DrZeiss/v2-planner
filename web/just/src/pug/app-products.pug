                                span.label.label-success Active
                              td.items-action.text-left
                                .btn-group
                                  a.btn.btn-default.btn-xs(href="#") View
                                  a.btn.btn-default.btn-xs(href="app-product-form.html") Edit
                            tr
                              td.items-check.content-width
                                .checkbox.condensed
                                    input#p5(type='checkbox')
                                    label(for='p5')
                              td.items-name.text-nowrap Product 5
                              td.items-category.text-nowrap(data-filter="3") Category 3
                              td.items-price(data-filter="20.50") $20.50
                              td.items-date.content-width(data-filter="1477872000000", data-sort="1477872000000", data-search="31 October 2016") 31 Oct 2016
                              td.items-img.text-center
                                a.unstyled.text-nowrap.fancybox(href="img/img-placeholder.png", rel="p5")
                                  i.fa.fa-image
                                  span <small>&nbsp;x</small> 4
                                .hide
                                  a.fancybox(rel="p5", href="img/img-placeholder.png")
                                  a.fancybox(rel="p5", href="img/img-placeholder.png")
                                  a.fancybox(rel="p5", href="img/img-placeholder.png")
                              td.items-status(data-filter="1", data-sort="1")
                                span.label.label-success Active
                              td.items-action.text-left
                                .btn-group
                                  a.btn.btn-default.btn-xs(href="#") View
                                  a.btn.btn-default.btn-xs(href="app-product-form.html") Edit
