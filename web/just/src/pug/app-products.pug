extends ./layout/layout.pug
block vars
  - var page = 'app-products'
  - var sidebar = 'sidebar-collapsible sidebar-open'
block title
  span Products List
block main
  .st-crumbs
    .fluid-cols
      .expand-col.text-ellipsis
        ul
          li
            a(href="index.html") Home
          li
            a(href="") App Pages
          li
            span Products List
      .min-col
        .st-search
          input.form-control.input-sm(type='text', placeholder='Search')
  .st-content
    .tab-content
      .tab-pane.active(role="tabpanel", id="items")
        .container-fluid
          .row
            .col-md-7.mb
              .form-group
                .st-inputbar
                  .st-inputbar-btn
                    .select2-contented
                      select#items-length.form-control(style="width: auto",
                                                       data-minimum-results-for-search="Infinity",
                                                       data-dropdown-css-class="contented")
                        option(value="10") 10
                        option(value="50") 50
                        option(value="100") 100
                        option(value="-1") All
                  .st-inputbar-input
                    input#items-search.form-control(type="text", placeholder="Search in Products")
                  .st-inputbar-btn
                    .btn-group#items-filter-buttons
                      button.btn.btn-default(data-toggle="collapse", data-target="#items-filter") Filters
            .col-md-5.mb
              .form-group.text-right
                .btn-group.dropdown
                  button#items-selected.btn.btn-default.dropdown-toggle.disabled(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="true") Selected  <span class="caret"></span>
                  ul.dropdown-menu
                    li
                      a#items-remove Remove
                    li
                      a#items-activate Activate
                    li
                      a#items-deactivate Deactivate
                    li
                      a#items-deselect Deselect
                .btn-group.dropdown#items-export.hidden-xs
                  button.btn.btn-default.dropdown-toggle(type="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="true") Export  <span class="caret"></span>
                .btn-group
                  a.btn.btn-success(href="app-product-form.html") Add New
          .collapse.in#items-filter
            .row
              .col-md-3.mb
                .form-group
                  select#items-category.select2-box.form-control(data-placeholder="Category", style="width: 100%")
                    option(value="-1", checked="checked") All Categories
              .col-md-3.mb
                .form-group
                  .slider-default
                    input#items-price.hide(type="text", name="", value="")
              .col-md-3.mb
                .form-group
                  button.btn.btn-default.btn-block.text-ellipsis#items-date(type="button") 
                    i.fa.fa-calendar
                    span Set Dates Range
              .col-md-3.mb
                .form-group
                  .checkbox
                    input#items-active(type='checkbox')
                    label(for='items-active') Active Only
          .row
            .col-md-12.mb
              .st-panel.st-panel--border
                .st-panel__cont
                  .st-panel__header
                    .fluid-cols
                      .expand-col.text-ellipsis
                        span.st-panel__title
                          span Products
                          small#items-info
                      .min-col
                        .st-panel__tabs
                          ul.nav.nav-tabs.tables-tabs(role="tablist")
                            li.active(role="presentation")
                              a(href="#items") Items
                            li(role="presentation")
                              a(href="#categories") Categories
                  .st-panel__content
                    .tab-content
                      .table-responsive.avoid-flicker(width="100%")
                        table#items-table.table.table-bordered.table-filled.table-striped.table-hover
                          thead
                            tr
                              th.items-check.content-width
                                .checkbox.condensed
                                    input#items-all.table-select-all(type='checkbox')
                                    label(for='items-all')
                              th.items-name.text-nowrap Product Name
                              th.items-category.text-nowrap Category
                              th.items-price.content-width Price
                              th.items-date.content-width Date
                              th.items-img.content-width Img
                              th.items-status.content-width Status
                              th.items-action.content-width Action
                          tbody
                            tr
                              td.items-check.content-width
                                .checkbox.condensed
                                    input#p1(type='checkbox')
                                    label(for='p1')
                              td.items-name.text-nowrap Product 1
                              td.items-category.text-nowrap(data-filter="1", data-search="Category 1") Category 1
                              td.items-price(data-filter="10.00") $10.00
                              td.items-date.content-width(data-filter="1476903600000", data-sort="1476903600000", data-search="20 October 2016") 20 Oct 2016
                              td.items-img.text-center
                                a.unstyled.text-nowrap.fancybox(href="img/img-placeholder.png", rel="p1")
                                  i.fa.fa-image
                                  span <small>&nbsp;x</small> 3
                                .hide
