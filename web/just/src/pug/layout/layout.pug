include ../mixins.pug
doctype html
html(lang="en")
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        meta(name="robots", content="noindex")
        title Just - Admin Bootstrap Template
        link(rel="icon", type="image/png", href="img/favicon.png")
        link(rel="apple-touch-icon-precomposed", href="img/apple-touch-favicon.png")
        link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i', rel='stylesheet', type='text/css')
        link(href='libs/bootstrap/css/bootstrap.min.css', rel='stylesheet')
        link(href='libs/font-awesome/css/font-awesome.min.css', rel='stylesheet')
        <!-- Common Libs CSS -->
        link(href='css/libs.common.min.css', rel='stylesheet')
        <!-- Page Libs CSS -->
        block css
        <!-- Just Bootstrap Theme -->
        link(href='css/just.css', rel='stylesheet')
        <!--[if lt IE 9]>
        script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
        script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
        <![endif]-->
    block vars
    body(class=sidebar)
        .st-wrapper
          include ./sidebar.pug
          include ./main.pug
        include ../include/source-modal.pug
        <!-- Common Libs JS -->
        script(src='js/libs.common.min.js')
        <!-- Common App Modules -->
        script(src="js/modules/app.js")
        script(src="js/modules/layout/sidebar.js")
        script(src="js/modules/layout/spanel.js")
        script(src="js/modules/widgets/settings.js")
        script(src="js/modules/widgets/notifications.js")
        <!-- Page Libs JS -->
        block js
        <!-- Page App Modules -->
        block js-last
        if analytics
            include ../include/analytics.html
