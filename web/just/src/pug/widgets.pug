                        p <a href="">John Doe</a> has been registered.
        .col-md-3.mb
          .st-settings#w-settings
            .st-settings__list
              .st-settings__item
                .st-settings__row
                  .st-settings__label
                    b Settings
                  .st-settings__control
                    i.fa.fa-spin.fa-circle-o-notch.st-settings__loader
              .st-settings__item
                .st-settings__row.st-settings__expand
                  .st-settings__label Workers
                  .st-settings__control.text-nowrap
                    i.fa.fa-angle-right.st-settings__ico
                .st-settings__sub
                  .st-settings__item
                    .st-settings__row
                      .st-settings__label Backuper
                      .st-settings__control
                        input#w-settings__backuper(type="checkbox", name="backuper", checked="checked")
                  .st-settings__item
                    .st-settings__row
                      .st-settings__label Storage Optimizer
                      .st-settings__control
                        input#w-settings__optimizer(type="checkbox", name="optimizer", checked="checked")
                  .st-settings__item
                    .st-settings__row
                      .st-settings__label Reports Export
                      .st-settings__control
                        input#w-settings__reports(type="checkbox", name="reports", checked="checked")
              .st-settings__item
                .st-settings__row
                  .st-settings__label Send Mails
                  .st-settings__control
                    input#w-settings__send(type="checkbox", name="send", checked="checked")
              .st-settings__item
                .st-settings__row
                  .st-settings__label Driver
                  .st-settings__control
                    .select2-contented.select2-sm
                      select.form-control#w-settings__driver(name="driver", data-minimum-results-for-search="Infinity")
                        option(value="smpt") SMPT
                        option(value="mailgun", selected="selected") Mailgun
              .st-settings__item
                .st-settings__row
                  .st-settings__label Daily Limit
                  .st-settings__control.text-nowrap
                    span.label.label-danger.settings-label 2500
                .st-settings__row
                  .st-settings__control
                    .slider-danger.slider-novalues
                      input#w-settings__limit(
                              name="limit",
                              data-grid="true",
                              data-min="0",
                              data-max="5000",
                              data-from="2500",
                              data-step="50",
