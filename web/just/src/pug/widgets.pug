                        td Larry
                        td the Bird
                        td.content-width
                          span.label.label-default Disabled
                      tr
                        td.content-width
                          .checkbox.condensed
                            input#p4(type="checkbox")
                            label(for="p4")
                        td Casey
                        td Sanford
                        td.content-width
                          span.label.label-default Active
                      tr
                        td.content-width
                          .checkbox.condensed
                            input#p5(type="checkbox")
                            label(for="p5")
                        td Lina
                        td Muller
                        td.content-width
                          span.label.label-default Active
                      tr
                        td.content-width
                          .checkbox.condensed
                            input#p6(type="checkbox")
                            label(for="p6")
                        td Jose
                        td Gislason
                        td.content-width
                          span.label.label-default Disabled
              .st-panel__footer
                .fluid-cols
                  .expand-col.text-ellipsis
                    span#tw-info
                  .min-col
                    #tw-pagination
        .col-md-3.mb
          .st-panel
            .st-panel__cont
              .st-notifications#w-notifications
                .st-notifications__head
                  .fluid-cols
                    .expand-col
                      .st-notifications__title New Alerts
                      small You have <span class="st-notifications__count">0</span> alerts.
                    .min-col
                      button.btn.btn-default.btn-sm.st-notifications__all Mark All
                .st-notifications__list
